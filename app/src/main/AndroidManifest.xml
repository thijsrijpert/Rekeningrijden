<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.thijsrijpert.rekeningrijden">
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.thijsrijpert.rekeningrijden.Controller.ViewControllers.ActivityController.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thijsrijpert.rekeningrijden.Controller.ViewControllers.ActivityController.CarActivity">
        </activity>
        <activity
            android:name="com.thijsrijpert.rekeningrijden.Controller.ViewControllers.ActivityController.RideOverviewActivity">
        </activity>
        <activity
            android:name="com.thijsrijpert.rekeningrijden.Controller.ViewControllers.ActivityController.RideRegistrationActivity">
        </activity>
        <activity
            android:name="com.thijsrijpert.rekeningrijden.Controller.ViewControllers.ActivityController.RegistrationActivity">
        </activity>
        <activity
            android:name="com.thijsrijpert.rekeningrijden.Controller.ViewControllers.ActivityController.ChargeActivity">
        </activity>
    </application>

</manifest>